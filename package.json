{
  "name": "@wycey/wycey-monorepo",
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": "please-use-bun",
    "npm": "please-use-bun",
    "yarn": "please-use-bun",
    "pnpm": "please-use-bun",
    "bun": ">=1"
  },
  "private": true,
  "homepage": "https://wycey.dev",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "preinstall": "bunx only-allow bun",
    "prepare": "run-s setup:*",
    "setup:git": "simple-git-hooks",
    "build": "dotenv -- turbo run build",
    "deploy": "turbo run deploy",
    "dev": "turbo run dev",
    "dev.debug": "turbo run dev.debug",
    "fmt": "prettier --cache --write . --plugin=prettier-plugin-astro",
    "fmt.check": "prettier --cache --check . --plugin=prettier-plugin-astro",
    "lint": "turbo run lint",
    "lint.ci": "turbo run lint.ci",
    "lint.fix": "turbo run lint.fix",
    "lint.force": "eslint --cache --cache-location node_modules/.cache/eslint/ \"{packages,apps}/*/src/**/*.{ts,js,cjs}*\"",
    "lint.fix.force": "eslint --fix --cache --cache-location node_modules/.cache/eslint/ \"{packages,apps}/*/src/**/*.{ts,js,cjs}*\"",
    "preview": "turbo run preview",
    "start": "turbo run start",
    "turbo": "turbo"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20231025.0",
    "@microsoft/eslint-formatter-sarif": "^3.0.0",
    "@prettier/plugin-xml": "^3.2.2",
    "@types/node": "^20.8.10",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.53.0",
    "lint-staged": "^15.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "prettier-plugin-astro": "^0.12.1",
    "simple-git-hooks": "^2.9.0",
    "tslib": "^2.6.2",
    "turbo": "^1.10.16",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "apps/*/{src,types}/**/*.ts*": [
      "eslint --cache --cache-location node_modules/.cache/eslint/ --fix"
    ],
    "packages/*/{src,types}/**/*.ts*": [
      "eslint --cache --cache-location node_modules/.cache/eslint/ --fix"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "bun run lint-staged --concurrent false"
  }
}
