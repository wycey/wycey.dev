{
  "name": "@wycey/wycey-monorepo",
  "private": true,
  "engines": {
    "node": "please-use-bun",
    "npm": "please-use-bun",
    "yarn": "please-use-bun",
    "pnpm": "please-use-bun",
    "bun": ">=1"
  },
  "homepage": "https://wycey.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wycey/wycey.dev.git"
  },
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "preinstall": "bunx only-allow bun",
    "prepare": "run-s setup:*",
    "setup:git": "lefthook install",
    "setup:blog": "cd apps/blog && bun run prepare",
    "build": "turbo run build",
    "deploy": "turbo run deploy",
    "dev": "turbo run dev",
    "dev.debug": "turbo run dev.debug",
    "clean": "turbo run clean",
    "fmt": "biome format --write .",
    "fmt.check": "biome format .",
    "lint": "turbo run lint",
    "lint.ci": "turbo run lint.ci",
    "lint.fix": "turbo run lint.fix",
    "preview": "turbo run preview",
    "start": "turbo run start",
    "turbo": "turbo"
  },
  "dependencies": {
    "@biomejs/biome": "^1.9.2",
    "@cloudflare/workers-types": "4.20240919.0",
    "@types/node": "^22.5.5",
    "lefthook": "^1.7.15",
    "npm-run-all2": "^6.2.3",
    "rimraf": "^6.0.1",
    "tslib": "^2.7.0",
    "turbo": "^2.1.2",
    "typescript": "^5.6.2",
    "vite-tsconfig-paths": "^5.0.1"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "@swc/core",
    "esbuild",
    "lefthook",
    "sharp",
    "workerd"
  ]
}
