{
    "name": "@wycey/wycey-monorepo",
    "version": "0.0.0",
    "packageManager": "pnpm@7.18.2",
    "engines": {
        "node": ">=16",
        "npm": "please-use-pnpm",
        "yarn": "please-use-pnpm",
        "pnpm": ">=7"
    },
    "private": true,
    "homepage": "https://wycey.dev",
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "prepare": "run-s setup:*",
        "setup:git": "simple-git-hooks",
        "build": "turbo run build",
        "deploy": "turbo run deploy",
        "dev": "turbo run dev",
        "dev.debug": "turbo run dev.debug",
        "fmt": "prettier --cache --write .",
        "fmt.check": "prettier --cache --check .",
        "lint": "turbo run lint",
        "lint.fix": "turbo run lint.fix",
        "lint.force": "eslint --cache --cache-location node_modules/.cache/eslint/ \"{packages,apps}/*/src/**/*.{ts,js,cjs}*\"",
        "lint.fix.force": "eslint --fix --cache --cache-location node_modules/.cache/eslint/ \"{packages,apps}/*/src/**/*.{ts,js,cjs}*\"",
        "preview": "turbo run preview",
        "start": "turbo run start",
        "turbo": "turbo"
    },
    "dependencies": {
        "@cloudflare/workers-types": "^4.20221111.1",
        "@types/node": "^18.11.16",
        "eslint": "^8.30.0",
        "lint-staged": "^13.1.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.8.1",
        "simple-git-hooks": "^2.8.1",
        "tslib": "^2.4.1",
        "turbo": "^1.6.3",
        "typescript": "^4.9.4",
        "vite": "^4.0.1",
        "vite-tsconfig-paths": "^4.0.3"
    },
    "lint-staged": {
        "*": [
            "prettier --write --cache --ignore-unknown"
        ],
        "apps/*/{src,types}/**/*.ts*": [
            "eslint --cache --cache-location node_modules/.cache/eslint/ --fix"
        ],
        "packages/*/{src,types}/**/*.ts*": [
            "eslint --cache --cache-location node_modules/.cache/eslint/ --fix"
        ]
    },
    "simple-git-hooks": {
        "pre-commit": "pnpm exec lint-staged --concurrent false"
    }
}
